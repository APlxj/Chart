<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="swallow.hellocharts.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/LineChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="折线图" />

        <Button
            android:id="@+id/ColumnChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="柱状图" />

        <Button
            android:id="@+id/PieChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="圆饼图" />

        <Button
            android:id="@+id/ComboLineColumnChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="柱状+折线图" />

        <Button
            android:id="@+id/BubbleChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="气泡图" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="测试一" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="测试二" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ddd"
            android:onClick="btnOnClock"
            android:padding="10dp"
            android:text="测试三" />
    </LinearLayout>

    <!-- <HorizontalScrollView
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="3">-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/LineChartView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/PieChartView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:visibility="gone" />

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/ColumnChartView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone" />

        <lecho.lib.hellocharts.view.ComboLineColumnChartView
            android:id="@+id/ComboLineColumnChartView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="gone" />

        <lecho.lib.hellocharts.view.BubbleChartView
            android:id="@+id/BubbleChartView"
            android:layout_width="400dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--</HorizontalScrollView>-->
</LinearLayout>
